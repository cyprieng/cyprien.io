---
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import HomeAnimationLazy from "@components/HomeAnimationLazy";
import LinkButton from "@components/LinkButton.astro";
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
---

<Layout title={`404 Not Found | ${SITE.title}`}>
  <Header />

  <main id="main-content">
    <div class="flex justify-center items-center w-full">
      <h1 class="absolute text-[48px] uppercase">404 - Not Found</h1>
      <div class="w-full h-[500px]">
        <HomeAnimationLazy client:idle />
      </div>
    </div>

    <div class="text-center">
      <LinkButton
        href="/"
        className="my-6 text-lg underline decoration-dashed underline-offset-8"
      >
        Go back home
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  #main-content {
    @apply mx-auto w-full;
  }
</style>
