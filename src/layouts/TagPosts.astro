---
/**
 * Layout for displaying posts filtered by a specific tag with pagination.
 */

import Pagination from "@components/Pagination.astro";
import PostLink from "@components/PostLink.astro";
import MainLayout from "@layouts/MainLayout.astro";
import type { AnyCollectionEntry } from "@utils/contentConfig";

export interface Props {
  currentPage: number; // Current page number
  totalPages: number; // Total number of pages
  paginatedPosts: AnyCollectionEntry[]; // Posts to display on this page
  tag: string; // Slugified tag name for URLs
  tagName: string; // Display name of the tag
}

const { currentPage, totalPages, paginatedPosts, tag, tagName } = Astro.props;
---

<MainLayout title={`Tag: ${tagName}`}>
  <h1 slot="title" transition:name={tag}>{`Tag:${tag}`}</h1>
  <ul>
    {
      paginatedPosts.map(({ data, slug, collection }) => (
        <PostLink
          href={
            collection === "projects" ? `/projects/${slug}/` : `/posts/${slug}/`
          }
          frontmatter={data}
        />
      ))
    }
  </ul>

  <Pagination
    {currentPage}
    {totalPages}
    prevUrl={`/tags/${tag}${
      currentPage - 1 !== 1 ? "/" + (currentPage - 1) : ""
    }/`}
    nextUrl={`/tags/${tag}/${currentPage + 1}/`}
  />
</MainLayout>
