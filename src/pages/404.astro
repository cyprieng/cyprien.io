---
/**
 * 404 error page displayed when a route is not found.
 */

import Terminal from "@components/Terminal.astro";
import config from "@config";
import MainLayout from "@layouts/MainLayout.astro";
---

<MainLayout title={`404 Not Found | ${config.title}`}>
  <section class="w-full">
    <Terminal command="cat /404">cat: /404: No such file or directory</Terminal>
  </section>

  <div class="text-center">
    <a
      href="/"
      class="group my-6 text-lg underline decoration-dashed underline-offset-8"
    >
      Go back home
    </a>
  </div>
</MainLayout>
