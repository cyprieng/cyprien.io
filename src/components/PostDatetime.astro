---
import config from "@config";

interface Props {
  className?: string;
  icon?: boolean;
  pubDatetime: string | Date;
  modDatetime: string | Date | undefined | null;
}

const { className, icon = true, pubDatetime, modDatetime } = Astro.props;

const postDatetime = new Date(
  modDatetime && modDatetime > pubDatetime ? modDatetime : pubDatetime,
);

const date = postDatetime.toLocaleDateString(config.locale, {
  year: "numeric",
  month: "short",
  day: "numeric",
});
---

<div class={`flex items-center opacity-80 ${className}`}>
  {
    icon ? (
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class={`mr-2 inline-block h-6 w-6 min-w-5.5`}
        aria-hidden="true"
      >
        <path d="M7 11h2v2H7zm0 4h2v2H7zm4-4h2v2h-2zm0 4h2v2h-2zm4-4h2v2h-2zm0 4h2v2h-2z" />
        <path d="M5 22h14c1.103 0 2-.897 2-2V6c0-1.103-.897-2-2-2h-2V2h-2v2H9V2H7v2H5c-1.103 0-2 .897-2 2v14c0 1.103.897 2 2 2zM19 8l.001 12H5V8h14z" />
      </svg>
    ) : (
      ""
    )
  }

  {
    modDatetime && modDatetime > pubDatetime ? (
      <span class="mr-2 text-base italic">Updated:</span>
    ) : (
      <span class="sr-only">Published:</span>
    )
  }
  <span class="text-base italic">
    <time datetime={postDatetime.toISOString()}>{date}</time>
  </span>
</div>
