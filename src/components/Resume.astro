<style>
  :global(#resume-main img) {
    @apply w-40 rounded-lg;
  }

  #resume {
    @apply p-8 mb-8 mx-8 flex;

    :global(svg) {
      @apply h-4 mb-1;

      :global(path) {
        @apply fill-slate-600 dark:fill-slate-200 stroke-slate-600 dark:stroke-slate-200;
      }
    }

    .progress-bar {
      @apply w-full bg-gray-200 rounded-full h-2.5;

      > div {
        @apply bg-skin-accent h-2.5 rounded-full;
      }
    }

    .skill {
      @apply mt-4;
    }

    #right-column {
      @apply basis-[30%] w-full;
    }

    #left-column {
      @apply basis-[70%] mr-10;
    }

    #resume-main {
      @apply flex;

      :global(img) {
        @apply w-40 rounded-lg;
      }

      #resume-name {
        @apply ml-8;

        h1 {
          @apply text-5xl font-bold;
        }

        h2 {
          @apply text-lg font-normal mt-3;
        }
      }
    }

    h3 {
      @apply uppercase mb-3 text-slate-600 dark:text-slate-200 text-xl font-extrabold;
    }

    #resume-profile {
      @apply mt-8;
    }

    #resume-education {
      @apply mt-8;
    }

    #resume-work {
      @apply mt-8;

      .work-title {
        @apply flex mb-2;

        img {
          @apply mr-4;
        }
      }
    }

    .row {
      h4 {
        @apply font-extrabold text-lg;
      }

      .date {
        @apply text-slate-400 dark:text-slate-300;
      }
    }
  }
</style>
